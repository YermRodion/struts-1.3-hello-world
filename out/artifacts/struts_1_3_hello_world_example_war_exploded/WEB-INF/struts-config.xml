<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>

    <form-beans>
        <form-bean name="helloWorldForm" type="com.percyvega.form.HelloWorldForm" />
        <form-bean name="testForm" type="com.percyvega.form.TestForm" />
    </form-beans>

    <action-mappings>
        <action path="/helloWorld" type="com.percyvega.action.HelloWorldAction" name="helloWorldForm">
            <forward name="success" path="/helloWorld.jsp" />
        </action>

        <action path="/testAction" type="com.percyvega.action.TestAction" name="testForm">
            <forward name="test" path="/testPage.jsp" />
        </action>
    </action-mappings>

</struts-config>